<h2>Adding movie</h2>
<form action="/admin/add-movie" method="POST"> 
<label for="title">Title:</label>
<input type="text" name="title" id="title" required>
<br><br>
<label for="plot">Plot (summary):</label>
 <textarea name="plot" id="plot" cols="100" rows="10">
</textarea>
{{!-- <input type="text" name="plot" id="plot" required> --}}
<br><br>
<label for="releaseDate">Release date:</label>
<input type="date" name="releaseDate" id="releaseDate" required>
<br><br>
<label for="rating">Rating: </label>
<input type="float" name="rating" id="rating" required>
<br><br>
<label for="imageUrl">Image URL (poster): </label>
<input type="url" name="imageUrl" id="imageUrl" required>
<br><br>
<label for="videoUrl">Youtube code (youtube.com/v=[this value]): </label>
<input type="text" name="videoUrl" id="videoUrl">
{{!-- genres --}}

<select name="status" id="status" required>
  <option value="active" checked="checked">active</option>
  <option value="inactive">inactive</option>
</select>
<img id="movieImg">
<br><br>
<button type="submit">Add this movie</button>
</form>

