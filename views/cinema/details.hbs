<h1>{{cinema.name}}</h1>

<div>
  <h2>Opening hours</h2>
  <table>
    {{#each cinema.workingSchema}}
    <tr>
      <td>{{this.day}}: </td>
      <td>{{startTime}}</td>
      <td> - </td>
      <td>{{endTime}}</td>
    </tr>
    {{/each}}
  </table>
</div>
<br>
<button><a href="/screening/{{cinema.id}}">tickets</a></button>
<br><br>

<h2>Directions</h2>
<table>
  <tr>
    <td>By car: </td>
    <td>{{cinema.transport.auto}}</td>
  </tr> 
  <tr>
    <td>By public transport: </td>
    <td>{{cinema.transport.publicTransport}}</td>
  </tr>
</table> 

<div id="map"></div>

<div>
  <h2>Rooms</h2>
  <table>
    {{#each cinema.rooms}}
    <tr>
      <td>{{name}}</td>
      <td>Capacity: {{capacity}}</td>
    </tr>
    {{/each}}
  </table>
</div>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAU5rvcQXc7XVrzrdK5CqbA7tKFNiLtt0Q"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script type="text/javascript" src="/javascripts/cinema-details.js"></script>