<h2>Set a new e-mail address</h2>
<p>Your current e-mail is: <b>"{{user.email}}"</b></p>

<form action="/profile/edit/email" method="POST" id="form-container">
  <div class="formContainer">
    <div class="formLabels">
      <label for="email">New e-mail</label>
    </div>

    <div class="formInput">
      <input id="email" type="email" name="email" value={{user.email}} required>
    </div>
  </div>
  {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}

  <button>Confirm change</button>
  <button><a href="/profile/edit">cancel</a></button>
</form>