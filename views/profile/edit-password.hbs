<h2>Set a new password</h2>

<form action="/profile/edit/password" method="POST" id="form-container">
  <div class="formContainer">
    <div class="formLabels">
      <label for="password">Current password</label>
      <label for="new-password">New password</label>
    </div>

    <div class="formInput">
      <input id="password" type="password" name="password" required>
      <input id="new-password" type="password" name="newPassword" required>
      <progress id="strength" max="100" value="0"></progress>
    </div>

  </div>

  {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}

  <button id="changePassword" disabled>Confirm change</button>
</form>

<script src="/javascripts/edit-password.js"></script>